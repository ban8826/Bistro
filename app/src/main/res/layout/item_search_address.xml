<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/i_search_address_tv_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="5dp"
        android:gravity="center|start"
        android:text="대전 서구 도마동"
        android:textColor="@color/gray_dark"
        android:textSize="18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light"/>

    <LinearLayout
        android:id="@+id/i_search_address_layout_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

<!--        <androidx.fragment.app.FragmentContainerView-->
<!--            android:id="@+id/i_search_address_map"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            android:name="com.naver.maps.map.MapFragment"/>-->

        <com.naver.maps.map.MapView
            android:id="@+id/i_search_address_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <Button
            android:id="@+id/i_search_address_btn_select"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_main_btn"
            android:layout_marginTop="5dp"
            android:text="선  택"
            android:textColor="@color/white"
            android:textSize="16dp"/>

    </LinearLayout>


</LinearLayout>